# CSGO2 Auto Trading Platform - Environment Configuration
# Copy this file to .env and configure your settings

# Database Configuration
DATABASE_URL=csgo_trader.db

# Steam API Configuration
# Get your Steam API key from: https://steamcommunity.com/dev/apikey
STEAM_API_KEY=your_steam_api_key_here

# BUFF163 API Configuration
# Get your API key from BUFF163 account settings
BUFF_API_KEY=your_buff_api_key_here

# YouPin898 API Configuration
# Get your API key from YouPin898 account settings
YOUPIN_API_KEY=your_youpin_api_key_here

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_key_here

# Server Configuration
PORT=8080
ENVIRONMENT=production

# Python Data Collector Configuration
PRICE_COLLECTION_INTERVAL=15  # minutes
MARKET_DATA_INTERVAL=30       # minutes
TREND_ANALYSIS_INTERVAL=60    # minutes
REQUEST_DELAY=2.0             # seconds between requests
MAX_RETRIES=3
PRICE_DATA_RETENTION_DAYS=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/application.log

# Proxy Configuration (optional)
# PROXY_HTTP=http://proxy:8080
# PROXY_HTTPS=https://proxy:8080

# WebSocket Configuration
WS_URL=ws://localhost:8080/ws

# React App Configuration
REACT_APP_API_BASE_URL=http://localhost:8080/api/v1
REACT_APP_WS_URL=ws://localhost:8080/ws